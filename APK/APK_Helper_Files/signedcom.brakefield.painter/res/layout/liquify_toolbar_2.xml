                <com.brakefield.infinitestudio.ui.AutosizeTextView android:text="@string/swirl" style="@style/TileLabel" />
            </FrameLayout>
            <FrameLayout android:id="@id/liquify_twirl_cw_button" style="@style/Tile">
                <tag android:value="@string/mappings_liquify_mode_swirl_cw" android:id="@id/ui_binding_key" />
                <ImageView android:id="@id/liquify_twirl_cw_image" android:src="@drawable/liquify_twirl_cw" style="@style/TileIcon" />
                <com.brakefield.infinitestudio.ui.AutosizeTextView android:text="@string/swirl" style="@style/TileLabel" />
            </FrameLayout>
            <FrameLayout android:id="@id/liquify_restore_button" style="@style/Tile">
