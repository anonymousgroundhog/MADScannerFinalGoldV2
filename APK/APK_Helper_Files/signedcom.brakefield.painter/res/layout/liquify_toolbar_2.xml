<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:padding="@dimen/padding_large" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ImageView android:id="@id/liquify_cancel" android:layout_marginLeft="8.0dip" android:src="@drawable/cancel" android:contentDescription="@string/cancel" style="@style/Icon">
            <tag android:value="@string/mappings_tool_cancel" android:id="@id/ui_binding_key" />
        </ImageView>
        <ImageView android:id="@id/liquify_cursor" android:src="@drawable/liquify_cursor" style="@style/Icon" />
