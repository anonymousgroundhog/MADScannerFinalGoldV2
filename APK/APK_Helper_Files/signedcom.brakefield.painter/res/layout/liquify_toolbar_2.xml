            </FrameLayout>
            <FrameLayout android:id="@id/liquify_pinch_button" style="@style/Tile">
                <tag android:value="@string/mappings_liquify_mode_pinch" android:id="@id/ui_binding_key" />
                <ImageView android:id="@id/liquify_pinch_image" android:src="@drawable/liquify_pinch" style="@style/TileIcon" />
                <com.brakefield.infinitestudio.ui.AutosizeTextView android:text="@string/pinch" style="@style/TileLabel" />
            </FrameLayout>
            <FrameLayout android:id="@id/liquify_bloat_button" style="@style/Tile">
                <tag android:value="@string/mappings_liquify_mode_bloat" android:id="@id/ui_binding_key" />
