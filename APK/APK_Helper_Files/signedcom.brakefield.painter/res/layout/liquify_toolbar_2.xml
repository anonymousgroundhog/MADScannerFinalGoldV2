                <com.brakefield.infinitestudio.ui.AutosizeTextView android:text="@string/restore" style="@style/TileLabel" />
            </FrameLayout>
            <FrameLayout android:id="@id/liquify_rewind_button" style="@style/Tile">
                <tag android:value="@string/mappings_liquify_mode_rewind" android:id="@id/ui_binding_key" />
                <ImageView android:id="@id/liquify_rewind_image" android:src="@drawable/liquify_rewind" style="@style/TileIcon" />
                <com.brakefield.infinitestudio.ui.AutosizeTextView android:text="@string/rewind" style="@style/TileLabel" />
            </FrameLayout>
        </LinearLayout>
    </com.brakefield.infinitestudio.ui.HorizontalPager>
</LinearLayout>