<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="@dimen/image_thumbnail_size"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/background" android:background="@color/dark_gray" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    <LinearLayout android:orientation="vertical" android:clipChildren="false" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@id/name_bar" android:padding="8.0dip" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center|left" android:id="@id/top_hint_type" android:layout_width="@dimen/button_size" android:layout_height="@dimen/button_size" android:src="@drawable/image" />
            <com.brakefield.infinitestudio.ui.AutosizeTextView android:textAppearance="@style/TextAppearance.Material3.TitleLarge" android:layout_gravity="center|left" android:id="@id/name" android:padding="@dimen/padding_large" android:layout_width="fill_parent" android:layout_height="wrap_content" android:lines="1" android:layout_weight="1.0" />
            <ImageView android:layout_gravity="center|right" android:id="@id/top_info" android:visibility="gone" android:layout_width="@dimen/button_size" android:layout_height="@dimen/button_size" android:src="@drawable/info" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@id/tile" android:clipChildren="false" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
            <LinearLayout android:orientation="vertical" android:id="@id/container" android:background="#44000000" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0" />
            <FrameLayout android:id="@id/preview_container" android:clipChildren="false" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
                <ImageView android:id="@id/preview" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="centerCrop" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:id="@id/options_bar" android:padding="@dimen/padding_large" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <FrameLayout android:id="@id/ungroup" style="@style/Tile">
                <ImageView android:id="@id/ungroup_image" android:src="@drawable/ungroup" style="@style/TileIcon" />
                <com.brakefield.infinitestudio.ui.AutosizeTextView android:id="@id/ungroup_text" android:text="@string/ungroup" style="@style/TileLabel" />
            </FrameLayout>
            <Space android:layout_width="fill_parent" android:layout_height="@dimen/button_size" android:layout_weight="1.0" />
            <FrameLayout android:id="@id/duplicate" style="@style/Tile">
                <ImageView android:id="@id/duplicate_image" android:src="@drawable/duplicate" style="@style/TileIcon" />
                <com.brakefield.infinitestudio.ui.AutosizeTextView android:id="@id/duplicate_text" android:text="@string/duplicate" style="@style/TileLabel" />
            </FrameLayout>
            <FrameLayout android:id="@id/share" style="@style/Tile">
                <ImageView android:id="@id/share_image" android:src="@drawable/share" style="@style/TileIcon" />
                <com.brakefield.infinitestudio.ui.AutosizeTextView android:id="@id/share_text" android:text="@string/share" style="@style/TileLabel" />
            </FrameLayout>
            <Space android:layout_width="fill_parent" android:layout_height="@dimen/button_size" android:layout_weight="1.0" />
            <FrameLayout android:id="@id/delete" style="@style/Tile">
                <ImageView android:id="@id/delete_image" android:src="@drawable/delete" style="@style/TileIcon" />
                <com.brakefield.infinitestudio.ui.AutosizeTextView android:id="@id/delete_text" android:text="@string/delete" style="@style/TileLabel" />
            </FrameLayout>
            <Space android:layout_width="fill_parent" android:layout_height="@dimen/button_size" android:layout_weight="1.0" />
            <FrameLayout android:id="@id/drive" style="@style/Tile">
                <ImageView android:id="@id/drive_image" android:src="@drawable/google_drive" style="@style/TileIcon" />
                <com.brakefield.infinitestudio.ui.AutosizeTextView android:id="@id/drive_text" android:text="@string/upload" style="@style/TileLabel" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_gravity="bottom" android:orientation="horizontal" android:id="@id/small_name_bar" android:background="#44000000" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/padding_large" android:paddingTop="@dimen/padding_medium" android:paddingBottom="@dimen/padding_medium" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1.0">
            <com.brakefield.infinitestudio.ui.AutosizeTextView android:textAppearance="@style/TextAppearance.Material3.TitleSmall" android:textSize="@dimen/text_size_normal" android:textColor="#ffffffff" android:id="@id/small_name" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Project" android:lines="1" android:layout_weight="1.0" />
            <com.brakefield.infinitestudio.ui.AutosizeTextView android:textAppearance="@style/TextAppearance.Material3.BodySmall" android:textSize="@dimen/text_size_small" android:textColor="#ffffffff" android:id="@id/small_date" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Creation date" android:lines="1" android:layout_weight="1.0" />
        </LinearLayout>
        <ImageView android:layout_gravity="center" android:id="@id/hint_type" android:layout_width="@dimen/button_size_small" android:layout_height="@dimen/button_size_small" android:src="@drawable/image" />
    </LinearLayout>
</FrameLayout>