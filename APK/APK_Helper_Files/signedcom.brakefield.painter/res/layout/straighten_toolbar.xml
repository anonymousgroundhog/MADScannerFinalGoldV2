    <ImageView android:id="@id/rotate_button" android:layout_margin="@dimen/margin_small" android:src="@drawable/adjust" android:contentDescription="@string/rotate" style="@style/Icon">
        <tag android:value="@string/mappings_straighten_mode_straighten" android:id="@id/ui_binding_key" />
