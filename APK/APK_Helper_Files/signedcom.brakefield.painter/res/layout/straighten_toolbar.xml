    <Space android:layout_width="4.0dip" android:layout_height="@dimen/button_size" android:layout_weight="1.0" />
    <ImageView android:id="@id/reset_button" android:layout_margin="@dimen/margin_small" android:src="@drawable/reset" android:contentDescription="@string/reset" style="@style/Icon">
        <tag android:value="@string/mappings_straighten_reset" android:id="@id/ui_binding_key" />
    </ImageView>
