    <ImageView android:id="@id/horizontal_button" android:layout_margin="@dimen/margin_small" android:src="@drawable/adjust_horizontal" android:contentDescription="@string/horizontal" style="@style/Icon">
        <tag android:value="@string/mappings_straighten_mode_horizontal" android:id="@id/ui_binding_key" />
