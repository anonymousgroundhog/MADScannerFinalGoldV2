<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:padding="16.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.brakefield.infinitestudio.ui.AutosizeTextView android:text="@string/perspectives" style="@style/SectionTitle" />
    <LinearLayout android:orientation="horizontal" android:padding="8.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <FrameLayout android:id="@id/lock_button" style="@style/Tile">
            <tag android:value="@string/mappings_perspective_settings_lock" android:id="@id/ui_binding_key" />
            <ImageView android:id="@id/lock_image" android:src="@drawable/lock_outline" style="@style/TileIcon" />
            <com.brakefield.infinitestudio.ui.AutosizeTextView android:text="@string/lock" style="@style/TileLabel" />
        </FrameLayout>
        <FrameLayout android:id="@id/snap_button" style="@style/Tile">
            <tag android:value="@string/mappings_perspective_settings_snap" android:id="@id/ui_binding_key" />
            <ImageView android:id="@id/snap_image" android:src="@drawable/snap" style="@style/TileIcon" />
            <com.brakefield.infinitestudio.ui.AutosizeTextView android:text="@string/snap" style="@style/TileLabel" />
        </FrameLayout>
        <FrameLayout android:id="@id/grid_button" style="@style/Tile">
            <tag android:value="@string/mappings_perspective_settings_grid" android:id="@id/ui_binding_key" />
            <ImageView android:id="@id/grid_image" android:src="@drawable/grid" style="@style/TileIcon" />
            <com.brakefield.infinitestudio.ui.AutosizeTextView android:text="@string/grid" style="@style/TileLabel" />
        </FrameLayout>
        <FrameLayout android:id="@id/reset_button" style="@style/Tile">
            <tag android:value="@string/mappings_perspective_settings_reset" android:id="@id/ui_binding_key" />
            <ImageView android:id="@id/reset_image" android:src="@drawable/reset" style="@style/TileIcon" />
            <com.brakefield.infinitestudio.ui.AutosizeTextView android:text="@string/reset" style="@style/TileLabel" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>